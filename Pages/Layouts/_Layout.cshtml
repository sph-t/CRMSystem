@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="~/css/minty.css"/>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" asp-append-version="true">*@
    <title>@ViewBag.Title</title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center">
    <div class="container-fluid">
        <a class="navbar-brand" style="color:white" href="#">MedHelp</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a asp-page="./Index" class="nav-link active" style="color:white" aria-current="page">Главная страница</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" style="color:white" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Модуль аналитики</a>
                    <ul class="dropdown-menu">
                      <li><a asp-page="./Dashboard" asp-route-date="@DateTime.Today.ToString()" class="dropdown-item">Дэшборд</a></li>
                      <li><a asp-page="./ProceduresAnalytics" class="dropdown-item">Статистика по процедурам</a></li>
                      <li><a asp-page="./SpecialistsStatistics" class="dropdown-item">Статистика по специалистам</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-page="./PatientsDatabase" class="nav-link active" style="color:white" aria-current="page">Клиенты</a>
                </li>
                <li class="nav-item">
                    <a asp-page="./Schedule" asp-route-date="@DateTime.Today.ToString()" class="nav-link active" style="color:white" aria-current="page">Расписание</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div>
    @RenderBody()
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>
